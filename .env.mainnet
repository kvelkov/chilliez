# Production Mainnet Configuration for Solana Arbitrage Bot
# ⚠️  NEVER commit this file with real API keys ⚠️

# Network Configuration
SOLANA_NETWORK=mainnet-beta
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com

# Enhanced RPC - Replace with your actual API keys
HELIUS_API_KEY=your_actual_helius_api_key_here
HELIUS_RPC_URL=https://mainnet.helius-rpc.com/?api-key=${HELIUS_API_KEY}

# Alternative premium RPCs (uncomment and configure as needed)
# QUICKNODE_RPC_URL=https://your-quicknode-endpoint.quiknode.pro/your-key/
# ALCHEMY_RPC_URL=https://solana-mainnet.g.alchemy.com/v2/your-key
# TRITON_RPC_URL=https://your-triton-endpoint

# Jito Configuration for MEV
JITO_ENDPOINT=https://frankfurt.mainnet.block-engine.jito.wtf
JITO_TIP_ACCOUNT=96gYZGLnJYVFmbjzopPSU6QiEV5fGqZNyN9nmNhvrZU5

# Jupiter API (Production)
JUPITER_API_URL=https://quote-api.jup.ag/v6

# Trading Configuration
PAPER_TRADING_MODE=false  # Set to true for paper trading
INITIAL_BALANCE_LAMPORTS=100000000  # 0.1 SOL initial balance
TRADING_ENABLED=true

# Risk Management (CRITICAL FOR MAINNET)
MAX_POSITION_SIZE_LAMPORTS=50000000   # 0.05 SOL max per trade (conservative)
MIN_PROFIT_THRESHOLD_LAMPORTS=100000  # 0.0001 SOL minimum profit
MAX_SLIPPAGE_BPS=50                   # 0.5% max slippage (tight for mainnet)
MAX_DAILY_TRADES=100                  # Daily trade limit
MAX_DAILY_LOSS_LAMPORTS=10000000      # 0.01 SOL max daily loss

# Enhanced Error Handling & Rate Limiting
ENABLE_ENHANCED_ERROR_HANDLING=true
API_RATE_LIMIT_PER_SECOND=5
MAX_CONSECUTIVE_ERRORS=3
BAN_DETECTION_ENABLED=true
CIRCUIT_BREAKER_ENABLED=true

# Monitoring & Alerting
ENABLE_METRICS=true
METRICS_PORT=9090
WEBHOOK_PORT=8080
ENABLE_DISCORD_ALERTS=true
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here
ENABLE_SLACK_ALERTS=false
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Wallet Configuration (SECURE THESE!)
MAIN_WALLET_PATH=mainnet-trading-wallet.json  # Your actual trading wallet
COLLECTOR_WALLET_PATH=mainnet-collector.json  # Fee collection wallet

# Performance Tuning
WORKER_THREADS=4
MAX_CONCURRENT_REQUESTS=10
CACHE_TTL_SECONDS=30
POOL_REFRESH_INTERVAL_SECONDS=60

# Database (Optional - for trade history)
DATABASE_URL=sqlite:///var/data/arbitrage_trades.db
ENABLE_TRADE_LOGGING=true

# Security
REQUIRE_WALLET_PASSWORD=true
ENABLE_2FA=false  # Future enhancement
LOG_SENSITIVE_DATA=false

# DEX-Specific Configuration
ORCA_ENABLED=true
RAYDIUM_ENABLED=true
JUPITER_ENABLED=true
METEORA_ENABLED=true
LIFINITY_ENABLED=true
PHOENIX_ENABLED=false  # Enable when ready

# Feature Flags
ENABLE_MULTIHOP_ARBITRAGE=true
ENABLE_CROSS_DEX_ARBITRAGE=true
ENABLE_FLASH_LOANS=false  # Future enhancement
ENABLE_MEV_PROTECTION=true
